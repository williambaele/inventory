<div class="mb-10">
  <h1 class="text-4xl mb-10">Manage your infos</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field mb-5">
        <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email", class:"w-full px-2 py-2 text-gray-700 bg-gray-100 rounded" %>
      </div>
      <div class="field mb-5">
        <%= f.text_field :first_name, autofocus: true, placeholder:"Your First Name", class:"w-full px-2 py-2 text-gray-700 bg-gray-100 rounded" %>
      </div>
      <div class="field mb-5">
        <%= f.text_field :last_name, autofocus: true, placeholder:"Your Last Name", class:"w-full px-2 py-2 text-gray-700 bg-gray-100 rounded" %>
      </div>
      <div class="field mb-5">
        <%= f.text_field :discord, autofocus: true, placeholder:"Your Discord", class:"w-full px-2 py-2 text-gray-700 bg-gray-100 rounded" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field mb-5">
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password (leave blank if you don't want to change it)", class:"w-full px-2 py-2 text-gray-700 bg-gray-100 rounded" %>
      </div>

      <div class="field mb-5">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Password confirmation", class:"w-full px-2 py-2 text-gray-700 bg-gray-100 rounded" %>
      </div>

      <div class="field mb-5">
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"Password (we need your current password to confirm your changes)", class:"w-full px-2 py-2 text-gray-700 bg-gray-100 rounded" %>
      </div>
      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>
  </div>
</div>
