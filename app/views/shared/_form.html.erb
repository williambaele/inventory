<%= form_for @item do |f| %>
  <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
    <div>
      <%= f.text_field :name, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded", placeholder: "Name" %>
    </div>
    <div>
      <%= f.text_field :sku, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded", placeholder: "Sku" %>
    </div>
    <div>
      <%= f.select :brand, options_for_select(['Nike', 'Adidas']), {}, class: "w-full px-2 py-2 text-gray-700 bg-gray-200 rounded"%>
    </div>
    <div>
      <%= f.select :size, options_for_select(["35.5",	"36","36.5","37.5","38","38.5","39","40","40.5","41","42","42.5","43","44","44.5","45","45.5","46","47","47.5","48","48.5"]), {}, class: "w-full px-2 py-2 text-gray-700 bg-gray-200 rounded"%>
    </div>
    <div>
      <%= f.text_field :retail, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded", placeholder: "Retail price" %>
    </div>
    <div>
      <%= f.select :state, options_for_select(['USED', 'VNDS', 'DS']), {}, class: "w-full px-2 py-2 text-gray-700 bg-gray-200 rounded"%>
    </div>
  </div>
    <div class="mt-6">
      <%= f.text_area :comment, class:"w-full px-2 py-2 text-gray-700 bg-gray-200 rounded", placeholder: "Comment", rows: 3 %>
    </div>
  <div class="flex justify-center mt-6">
    <%= f.submit "Submit", class:"px-4 py-2 text-gray-200 bg-gray-800 rounded-md hover:bg-gray-700 focus:outline-none focus:bg-gray-700" %>
  </div>
<% end %>
<script>
  const brandSelect = document.querySelector("[name='item[brand]']");
  const sizeSelect = document.querySelector("[name='item[size]']");

  brandSelect.addEventListener("change", (event) => {
    if (event.target.value === "Adidas") {
      sizeSelect.innerHTML = `
