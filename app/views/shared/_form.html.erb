        <option value="36 1/3">38</option>
        <option value="36 1/3">38 2/3</option>
        <option value="36 1/3">39 1/3</option>
        <option value="36 1/3">40</option>
        <option value="36 1/3">40 2/3</option>
        <option value="36 1/3">41 1/3</option>
        <option value="36 1/3">42</option>
        <option value="36 1/3">42 2/3</option>
        <option value="36 1/3">43 1/3</option>
        <option value="36 1/3">44</option>
        <option value="36 1/3">44 2/3</option>
        <option value="36 1/3">45 1/3</option>
        <option value="36 1/3">46</option>
        <option value="36 1/3">46 2/3</option>
        <option value="36 1/3">47 1/3</option>
        <option value="36 1/3">48</option>
        <option value="36 1/3">48 2/3</option>
      `;
    } else if (event.target.value === "Nike") {
      sizeSelect.innerHTML = `
        <option value="35.5">35.5</option>
        <option value="36">36</option>
        <option value="36.5">36.5</option>
        <option value="37">37.5</option>
