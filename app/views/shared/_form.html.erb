        <option value="37">43</option>
        <option value="37">44</option>
        <option value="37">44.5</option>
        <option value="37">45</option>
        <option value="37">45.5</option>
        <option value="37">46</option>
        <option value="37">47</option>
        <option value="37">47.5</option>
        <option value="37">48</option>
        <option value="37">48.5</option>
      `;
    }
  });
</script>
